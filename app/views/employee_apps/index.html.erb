<p id="notice"><%= notice %></p>

<h1>Employee Apps</h1>

<table>
  <thead>
    <tr>
      <th>Employee name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Designation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_apps.each do |employee_app| %>
      <tr>
        <td><%= employee_app.employee_name %></td>
        <td><%= employee_app.age %></td>
        <td><%= employee_app.gender %></td>
        <td><%= employee_app.designation %></td>
        <td><%= link_to 'Show', employee_app %></td>
        <td><%= link_to 'Edit', edit_employee_app_path(employee_app) %></td>
        <td><%= link_to 'Destroy', employee_app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

